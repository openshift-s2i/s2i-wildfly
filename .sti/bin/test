#!/bin/bash -x

/tmp/scripts/run &

MAX_ATTEMPTS=20
SLEEP_TIME=1
ATTEMPT=1
RESULT=1

while [ $ATTEMPT -le $MAX_ATTEMPTS ]; do
  response_code=$(curl -s -w %{http_code} -o /dev/null http://localhost:8080/)
  status=$?
  if [ $status -eq 0 ]; then
    if [ $response_code -eq 200 ]; then
      RESULT=0
    fi
    break
  fi
  ATTEMPT=$(( $ATTEMPT + 1 ))
  sleep $SLEEP_TIME
done

exit $RESULT
